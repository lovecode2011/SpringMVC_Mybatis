<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.booksales.dao.CommentWapperMapper" >
  <resultMap id="BaseResultMap" type="com.booksales.model.CommentWapper" >
    <id column="CommentId" property="commentid" jdbcType="INTEGER" />
    <result column="UserId" property="userid" jdbcType="INTEGER" />
    <result column="BookId" property="bookid" jdbcType="INTEGER" />
    <result column="CommentTime" property="commenttime" jdbcType="TIMESTAMP" />
    <result column="CommentContext" property="commentcontext" jdbcType="VARCHAR" />
     <result column="UserName" property="username" jdbcType="VARCHAR" />
    <result column="CommentLevel" property="commentlevel" jdbcType="INTEGER" />
  </resultMap>
 <select id="selectCommentByBookId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
 SELECT
bscomment.CommentId,
bscomment.UserId,
bscomment.BookId,
bscomment.CommentTime,
bscomment.CommentContext,
bscomment.CommentLevel,
bsuser.UserName
FROM
bscomment
INNER JOIN bsuser ON bscomment.UserId = bsuser.UserId
WHERE
bscomment.BookId = #{bookid,jdbcType=INTEGER}
 </select>
</mapper>